{
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "Task",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "TodoWrite",
      "AskUserQuestion",
      "Skill",
      "NotebookEdit",
      "EnterPlanMode",
      "ExitPlanMode",
      "KillShell",
      "TaskOutput"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(.env*.local)",
      "Read(./secrets/**)",
      "Read(.git/config)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(rm -rf:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "sh -c 'FILE=$(echo \"$CLAUDE_FILE_PATH\" | tr -d \"\"); if [[ \"$FILE\" =~ \\.(ts|tsx|js|jsx)$ ]]; then npx eslint --fix \"$FILE\" 2>/dev/null || true; fi'",
            "timeout": 10000
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "sh -c 'FILE=$(echo \"$CLAUDE_FILE_PATH\" | tr -d \"\"); if [[ \"$FILE\" =~ \\.(ts|tsx|js|jsx|json|md)$ ]]; then npx prettier --write \"$FILE\" 2>/dev/null || true; fi'",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
